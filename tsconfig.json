{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "types": [
        "node"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./"]
    },
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src//*.ts", "src//.d.ts", "tests/**/.spec.ts"],
  "ts-node": {
    "files": true,
    "esm": true
  },
  "files": ["src/index.ts"]
}
